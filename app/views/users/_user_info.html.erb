<h1>User info</h1>

  <% if user.image.attached? %>
    <%= image_tag user.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
  <p>name</p>
  <%= user.name %>
  <p>introduction</p>
  <%= user.introduction %>

  <%= link_to "edit", edit_user_path(user), class: "btn btn-primary"%>