<!--user<=本のレビュー記入者の情報-->
<%= render "users/user_info", user: @book.user %>
<%= render "books/new.book", new_book: @new_book %>

<h1>Book detail</h1>

<% if @book.image.attached? %>
  <%= image_tag @book.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image', size: "200x200" %>
<% end %>

<%= link_to book_path(@book) do %>
  <% @book.title %>
<% end %>
<% @book.body %>
<%= link_to "edit", edit_book_path(@book) %>
<%= link_to "delete", book_path(@book), method: :delete %>

<%= link_to user_path(@book.user.id) do %>
  <%= @book.user.name %>
<% end %>