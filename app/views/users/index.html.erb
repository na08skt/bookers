<%= render 'users/user_info', user: current_user %>
<%= render 'books/new.book', new_book: @new_book %>

<h1>Users</h1>

<table>
  <thead>
    <th>
      image
    </th>
    <th>
      name
    </th>
    <th></th>
  </thead>
  <% @user_index.each do |user|%>
    <tbody>
      <td>
        <% if user.image.attached? %>
          <%= image_tag user.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
      </td>
      <td>
        <%= user.name%>
      </td>
      <td>
        <%= link_to "Show", user_path(user) %>
      </td>
    </tbody>
  <% end %>
</table>