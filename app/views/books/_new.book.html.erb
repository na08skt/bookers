<h1>New book</h1>

<%= form_with model: new_book, url: books_path, method: :post do |f| %>
  <div class="mt-3">
    <%= f.label :title%>
    <%= f.text_field :title %><br>
  </div>
  <div class="mt-3">
    <%= f.label :body %>
    <%= f.text_field :body %><br>
  </div>
  <div class="mt-3">
    <%= f.file_field :image %><br>
  </div>
  <%= f.submit "投稿する", class: "mt-3"%><br>
<% end %>