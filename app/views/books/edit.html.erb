<%= form_with model: @edit_book, url: book_path(@edit_book), method: :patch do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.file_field :image %>

  <%= f.submit "編集する" %>
<% end %>

<%= link_to "Show", book_path(@edit_book) %>
<%= link_to "Back", books_path %>