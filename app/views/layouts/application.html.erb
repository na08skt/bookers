<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row mt-3">
        <div class="col-3">
          <%= link_to "Bookers", root_path, class: "btn btn-primary" %>
        </div>
        <div class="col-9">
          <% if user_signed_in? %>
            <div class="header">
              <%= link_to "Home", user_path(current_user), class: "btn btn-primary" %>
              <%= link_to "Users", users_path, class: "btn btn-primary" %>
              <%= link_to "Books", books_path, class: "btn btn-primary" %>
              <%= link_to "Log out", destroy_user_session_path, class: "btn btn-primary", method: :delete %>
            </div>
          <% else %>
            <div class="header">
              <%= link_to "Home", root_path, class: "btn btn-primary" %>
              <%= link_to "About", about_path, class: "btn btn-primary" %>
              <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
              <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
            </div>
          <% end %>

          <!--flash message-->
          <div class="message_space">
            <% flash.each do |key, value| %>
              <%= content_tag(:div, value, class: "#{key} alert alert-success") %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="mt-3">
            <%= yield %>
          </div>
          <div class="d-flex justify-content-center">
            <%= render "homes/footer" %>
          </div>
        </div>

      </div>
    </div>



  </body>
</html>
